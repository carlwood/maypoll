<div id="<%= dom_id poll %>">
  <h2>
    <%= link_to poll do %>
      <%= poll.question %>
    <% end %>
  </h2>

  <p>
    Posted <%= time_tag poll.created_at %>
  </p>

  <p>
    <strong>Options:</strong>
    <%= poll.options %>
  </p>
</div>

<div>
  <%= button_to "Delete poll", poll_path(poll), method: :delete %>
</div>

<hr>